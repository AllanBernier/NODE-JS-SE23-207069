
<form 
    action="<%=typeof product != 'undefined' ? 
    '/product/update/'+ product.id : 
    '/product'%>" 
    method="post">


    <div class="form-horizontal">
        <div class="form-group row">
            <label class="cool-form-label col-sm-2" for="name">Name</label>
            <div class="col-sm-8">
                <input ckass="form-control" value="<%=typeof product != 'undefined' ? product.name : '' %>" name="name" type="text">
            </div>

        </div>

        <div class="form-group row">
            <label class="cool-form-label col-sm-2" for="price">Price</label>
            <div class="col-sm-8">
                <input ckass="form-control" name="price" value="<%=typeof product != 'undefined' ? product.price : ''%>" type="number">
            </div>

        </div>
        
        <div class="form-group row">
            <label class="cool-form-label col-sm-2" for="price"></label>
            <div class="col-sm-8">
                <input class="btn btn-default btn-success" type="submit">    
                <a class="btn btn-outline-dark" href="/product">Annuler</a>
            </div>

        </div>
        

    </div>
</form>
